<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title%></title>
    <link rel="stylesheet" href="/stylesheets/userstyle.css" />
  </head>
  <body>
    <div class="container">
      <a href="/">Back To Home</a>
      <div class="cards">
        <% users.forEach(user => { %>
  <div class="profile-card">

    <img src="<%=user.image%>" alt="person" />

    <h3><%= user.name %></h3>
    <p class="email"><%= user.email %></p>

    <p class="desc">
      <%= user.desc %>
    </p>
    <div class="ed-btns">
    <a href="/edit/<%=user._id %>">Edit profile</a>
    <a href="/delete/<%=user._id%>">Delete profile</a>
    </div>
  </div>
<% }) %>

      </div>
    </div>

  </body>
</html>
